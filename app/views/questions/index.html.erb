<section id="main">
  <div class="inner">
    <p id="notice"><%= notice %></p>

    <h1>Questions</h1>
    <%if @is_mentor ==false %>
    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <tr>
            <th><%=link_to "Category", :sort => "category_name"%></th>
            <th><%=link_to "Title", :sort => "title"%></th>
            <th><%=link_to "Average Point Desc", :sort => "qpoint1"%></th>
            <th><%=link_to "Average Point Asc", :sort => "qpoint2"%></th>
            <th><%=link_to "Can Evaluate", :sort => "caneval"%></th>
            <th><%=link_to "Created at", :sort => "created_at"%></th>
          </tr>
          <% @questions.each do |question| %>
          <%can = ((question.created_at + $due) > Time.now )%>

          <tr>
            <td><%= link_to question.category_name ,category_question_path(question.category.id,question.id) %></td>
            <td><%= link_to question.title ,category_question_path(question.category.id,question.id) %></td>
            <td></td>
            <td><%= link_to  question.qpoint2,category_question_path(question.category.id,question.id) %></td>
            <td><%= link_to question.caneval ,category_question_path(question.category.id,question.id) %></td>
            <td><%= link_to question.created_at ,category_question_path(question.category.id,question.id) %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
    <%else%>
    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <tr>
            <th><%=link_to "Category", :sort => "category_name"%></th>
            <th><%=link_to "Title", :sort => "title"%></th>
            <th><%=link_to "Average Point Desc", :sort => "qpoint1"%></th>
            <th><%=link_to "Average Point Asc", :sort => "qpoint2"%></th>
            <th><%=link_to "Can Evaluate", :sort => "caneval"%></th>
            <th><%=link_to "Created at", :sort => "created_at"%></th>
            <th><%=link_to "Is assign", :sort => "assign"%></th>
          </tr>
            <% @questions.each do |question| %>
            <%if question.assign == false%>
              <% b = "false"%>
              <%else%><%b = question.assign%>    <%end%>
            <%puts b%>
            <tr>
              <td><%= link_to question.category_name ,category_question_path(question.category.id,question.id) %></td>
              <td><%= link_to question.title ,category_question_path(question.category.id,question.id) %></td>
              <td></td>
              <td><%= link_to  question.qpoint2,category_question_path(question.category.id,question.id) %></td>
              <td><%= link_to question.caneval ,category_question_path(question.category.id,question.id) %></td>
              <td><%= link_to question.created_at ,category_question_path(question.category.id,question.id) %></td>
              <td><%= link_to b ,category_question_path(question.category.id,question.id) %></td>
            </tr>
            <% end %>
      </tbody>
    </table>
    <%end%>
    <br>

  </div>
</section>
